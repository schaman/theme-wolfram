<!-- Contact screen -->
<div class="site-wrapper site-wrapper_contact screen" id="contact-us">
  <div class="site-wrapper__inner">
    <div class="cover-container">
      <h2 class="title">
        {{ form.title | markdown({ 'em': '<span class="global-text-color">%s</span>' }) | raw }}
      </h2>
      {% if form.subtitle is defined %}
        <p class="title__sub-text">
          {{ form.subtitle }}
        </p>
      {% endif %}
    </div>
    <div class="container">
      <div class="col-xs-6 col-sm-3">
        <div class="contact__info g-line-height-lg">
          {{ form.text | markdown({ 'em': '<h4 class="contact-info__title">%s</h4>' }) | raw }}
        </div>
      </div>
      <div class="col-xs-12 col-sm-6">
        <form role="form" class="contact__form">
          <div class="row form-group">
            <div class="col-xs-6 col-md-4">
              <label for="email" class="sr-only">Your email address</label>
              <input type="email" name="email" class="form-control" id="email" placeholder="E-mail" data-original-title="" title="">
            </div>
            <div class="col-xs-6 col-md-4">
              <label for="name" class="sr-only">Your name</label>
              <input type="text" name="name" class="form-control" id="name" placeholder="Full Name" data-original-title="" title="">
            </div>
          </div>
          <div class="form-group">
            <label for="message" class="sr-only">Your message</label>
            <textarea name="message" class="form-control" rows="3" id="message" placeholder="Message"></textarea>
          </div>
          <button type="submit" class="btn btn-transparent">Send It</button>
        </form>
      </div>
    </div>
  </div>
</div>
